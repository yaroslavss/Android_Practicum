<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:layout_marginTop">@dimen/profile_label_margin_top</item>
        <item name="android:textColor">@color/black_38</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:textColor">@color/black_87</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
        <item name="android:elevation">@dimen/btn_elevation</item>
        <item name="android:background">@drawable/button_bg</item>
    </style>

    <style name="AppBarText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle16">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="DialogText" parent="TextStyle16">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/spacing_xxl</item>
    </style>

    <style name="TextStyle5">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="TextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/light_olive_green</item>
    </style>

    <style name="HelpCategoryText" parent="TextStyle" />

    <style name="SearchLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/default_margin</item>
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="EventTitleText">
        <item name="android:fontFamily">@font/officina_sans_extra_bold_scc</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/blue_grey</item>
    </style>

    <style name="EventTitleText.Centered" parent="EventTitleText">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextStyle10">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black_70</item>
    </style>

    <style name="EventDescriptionText" parent="TextStyle10" />

    <style name="EventBottomPane">
        <item name="android:layout_marginTop">@dimen/spacing_m</item>
        <item name="android:paddingVertical">@dimen/spacing_xs</item>
        <item name="android:background">@color/turtle_green</item>
    </style>

    <style name="EventBottomPaneText">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>